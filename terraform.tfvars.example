# Copy this file to terraform.tfvars and fill in your values
# cp terraform.tfvars.example terraform.tfvars

# Required: Tailscale auth key
# Get from: https://login.tailscale.com/admin/settings/keys
# Create a reusable key for convenience
tailscale_auth_key = "tskey-auth-xxxxx"

# Optional: Tailscale hostname (default: devbox)
# tailscale_hostname = "devbox"

# Optional: Email for spot interruption notifications
notification_email = "your-email@example.com"

# Spot instances (default: enabled for ~70% cost savings)
# use_spot              = true
# spot_max_price        = ""    # Empty = on-demand price cap
# spot_restart_attempts = 5

# Schedule (default: 5am-11pm Mountain Time)
# enable_schedule   = true
# schedule_start    = "0 5 * * ? *"   # 5am
# schedule_stop     = "0 23 * * ? *"  # 11pm
# schedule_timezone = "America/Denver"

# Optional overrides
# aws_region              = "us-east-1"
# instance_type           = "m7a.xlarge"
# volume_size             = 100
# volume_throughput       = 250
# hostname                = "aws-dev-box"
# snapshot_retention_days = 7
