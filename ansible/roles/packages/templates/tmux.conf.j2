# =============================================================================
# Imladris tmux config — low-strain, long-session optimized
# =============================================================================

# --- True color support ---
set -g default-terminal "tmux-256color"
set -ag terminal-overrides ",xterm-256color:RGB"

# --- Sane defaults ---
set -g mouse on
set -g history-limit 50000
set -g base-index 1
setw -g pane-base-index 1
set -g renumber-windows on
set -g escape-time 0
set -g focus-events on
set -g set-clipboard on

# --- Prefix: Ctrl-a (easier than Ctrl-b) ---
unbind C-b
set -g prefix C-a
bind C-a send-prefix

# --- Easy splits ---
bind | split-window -h -c "#{pane_current_path}"
bind - split-window -v -c "#{pane_current_path}"
unbind '"'
unbind %

# --- Easy pane navigation ---
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

# --- Reload config ---
bind r source-file ~/.tmux.conf \; display "Config reloaded"

# =============================================================================
# Theme — muted blue/slate, low contrast, easy on eyes
# Inspired by: nord/catppuccin dark palettes
# =============================================================================

# Colors (low-strain palette):
#   bg:        #1e2030  (deep blue-black)
#   fg:        #a9b1d6  (soft lavender-gray)
#   accent:    #7aa2f7  (gentle blue)
#   dim:       #565f89  (muted slate)
#   active:    #394b70  (subtle highlight)
#   warn:      #e0af68  (soft amber)

# --- Status bar ---
set -g status-position bottom
set -g status-style "bg=#1e2030,fg=#565f89"
set -g status-interval 5
set -g status-left-length 30
set -g status-right-length 60

set -g status-left "#[fg=#7aa2f7,bg=#1e2030,bold] #S #[fg=#565f89]│ "
set -g status-right "#[fg=#565f89]│ #[fg=#a9b1d6]%H:%M #[fg=#565f89]│ #[fg=#a9b1d6]%b %d "

# --- Window tabs ---
setw -g window-status-format "#[fg=#565f89] #I:#W "
setw -g window-status-current-format "#[fg=#7aa2f7,bg=#394b70,bold] #I:#W "
setw -g window-status-separator ""

# --- Pane borders ---
set -g pane-border-style "fg=#394b70"
set -g pane-active-border-style "fg=#7aa2f7"

# --- Messages ---
set -g message-style "bg=#394b70,fg=#a9b1d6"
set -g message-command-style "bg=#394b70,fg=#a9b1d6"

# --- Clock ---
setw -g clock-mode-colour "#7aa2f7"
