{
  "mcpServers": {
    "windmill": {
      "type": "url",
      "url": "http://localhost:8000/api/mcp/w/imladris/mcp?token=__WINDMILL_TOKEN__"
    }
  },
  "permissions": {
    "allow": [],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "mcp__*",
        "hooks": [
          {
            "type": "command",
            "command": "bun run $HOME/.claude/hooks/McpSecurityValidator.hook.ts"
          },
          {
            "type": "command",
            "command": "bun run $HOME/.claude/hooks/McpLogger.hook.ts"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "mcp__*",
        "hooks": [
          {
            "type": "command",
            "command": "bun run $HOME/.claude/hooks/McpLogger.hook.ts"
          }
        ]
      },
      {
        "matcher": "TaskCreate",
        "hooks": [
          {
            "type": "command",
            "command": "bun run $HOME/.claude/hooks/PrdSync.hook.ts"
          }
        ]
      },
      {
        "matcher": "TaskUpdate",
        "hooks": [
          {
            "type": "command",
            "command": "bun run $HOME/.claude/hooks/PrdSync.hook.ts"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bun run $HOME/.claude/hooks/StateSnapshot.hook.ts"
          }
        ]
      }
    ]
  }
}
